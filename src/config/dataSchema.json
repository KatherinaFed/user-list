{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dataSchema.json",
  "title": "User",
  "description": "User data",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "The users's an indentifier."
    },
    "name": {
      "type": "string",
      "description": "The user's a full name"
    },
    "username": {
      "type": "string",
      "description": "The user's a nickname"
    },
    "email": {
      "type": "string"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "suite": {
          "type": "string",
          "description": "Specific floor, office or apartment within a building"
        },
        "city": {
          "type": "string"
        },
        "zipcode": {
          "type": "string",
          "pattern": "\\d{5}"
        },
        "geo": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "string",
              "pattern": "^-?\\d+(\\.\\d+)?$"
            },
            "lng": {
              "type": "string",
              "pattern": "^-?\\d+(\\.\\d+)?$"
            }
          }
        }
      }
    },
    "phone": {
      "type": "string",
      "pattern": "^\\d{3}-\\d{3}-\\d{4}( x\\d+)?$"
    },
    "website": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9.-]+$"
    },
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "catchPhrase": {
          "type": "string",
          "description": "A short, catchy phrase or slogan that represents a company or product."
        },
        "bs": {
          "type": "string",
          "description": "A brief description of the company's business strategy or focus."
        }
      }
    }
  },
  "required": ["id", "name"]
}
